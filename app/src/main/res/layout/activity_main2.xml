<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.Main2Activity">
    <EditText
            android:id="@+id/buttent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户"/>
    <EditText
            android:id="@+id/buttent2"
            android:layout_below="@+id/buttent1"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"/>
    <EditText
            android:id="@+id/buttent3"
            android:layout_below="@+id/buttent2"
            android:layout_marginTop="100dp"
            android:hint="电话"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/buttent4"
            android:layout_below="@+id/buttent3"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</RelativeLayout>